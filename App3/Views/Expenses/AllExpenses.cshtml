@model IEnumerable<App3.Models.Expenses>
@{
    //Layout = "~/Views/Income/_Layout.cshtml";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="row mt-2">
    <div class="col-md-12">
        <div class="card border-dark mb-3">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">                   
                        <li class="nav-item">
                            <a class="nav-link" asp-action="CreateExpenses" asp-controller="Expenses">Expenses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ExpensesDetail" asp-controller="Expenses">Expenses Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="EditExpenses" asp-controller="Expenses">Edit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="true" asp-action="AllExpenses" asp-controller="Expenses">AllExpenses</a>
                        </li>            
                </ul>
            </div>
            <div class="card-body">
                <div class="table-responsive-sm overflow-scroll">
                    <table class="table  table-bordered">
                        <thead>
                            <tr>
                                <th>Expenses Details</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Project</th>
                                <th>Released By</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var emp in Model)
                                {
                                    <tr>
                                        <td>@emp.ExpensesDetails</td>
                                        <td>@emp.Date.ToString("0:dd/mm/yyyy")</td>
                                        <td>@emp.Amount</td>
                                        <td>@emp.ProjectName</td>
                                        <td>@emp.ReleasedBy</td>
                                        <td> <a asp-action="EditExpenses" asp-controller="Expenses" asp-route-id="@emp.id" type="submit" class="btn btn-primary btn-sm">Edit</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>