@model App3.ViewModel.ExpensesViewModel

@{
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="row justify-content-center mt-2">
    <div class="col-md-12">
        <div class="card border-info mb-3">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link"  asp-action="CreateExpenses" asp-controller="Expenses">Expenses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="ExpensesDetail" asp-controller="Expenses">Expenses Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="true" asp-action="EditExpenses" asp-controller="Expenses">Edit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="AllExpenses" asp-controller="Expenses">AllExpenses</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <form  enctype="multipart/form-data" asp-action="EditExpenses" asp-controller="Expenses" method="post">
                    <div class="form-group">
                        <label asp-for="strExpensesDetail" class="form-label">Expenses Name</label>
                        <select id="@Model.ExpensesDetail" asp-for="strExpensesDetail" asp-items="@(new SelectList(Model.ExpensesDetail, nameof(ExpensesDetails.Name),nameof(ExpensesDetails.Name)))" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="form-label">Amount</label>
                        <input type="number" class="form-control" asp-for="Amount">
                    </div>
                    <div class="form-group">
                        <label asp-for="SpentBy" class="form-label">Fund ReleasedBy</label>
                        <input type="text" class="form-control" asp-for="SpentBy">
                    </div>
                    <div class="form-group">
                        <label asp-for="AmountSpentDate" class="form-label">Date</label>
                        <input type="date" class="form-control" value="@Model.AmountSpentDate.ToString("0:dd/mm/yyyy")" asp-for="AmountSpentDate">
                    </div>

                    <div class="form-group col-md-6">
                        <label class="form-label" asp-for="File">Attach Files</label>
                        <input type="file" class="form-control" asp-for="File">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-sm" type="submit">Submit</button>
                        <a class="btn btn-primary btn-sm" asp-action="AllExpenses" asp-controller="Expenses">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>