@model App3.Models.ExpensesDetails
@{
    Layout = "~/Views/Layout/_Layout.cshtml";
}


<div class="row justify-content-center mt-2">
    <div class="col-md-12">
        <div class="card border-info mb-3">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="CreateExpenses" asp-controller="Expenses">Expenses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active"  aria-current="true"  asp-action="ExpensesDetail" asp-controller="Expenses">Expenses Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="AllExpenses" asp-controller="Expenses">AllExpenses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="EditExpenses" asp-controller="Expenses">Edit</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label asp-for="ExpenseID" class="form-label">Expenses ID</label>
                        <input type="number" class="form-control" asp-for="ExpenseID">
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Enpenses Name</label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>