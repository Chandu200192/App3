@model App3.Models.Client
@{
    //Layout = "~/Views/Income/_Layout.cshtml";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="row justify-content-center mt-2">
    <div class="col-md-12">
        <div class="card border-info mb-3">
            <div class="card-header">                
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="true" asp-action="AddClient" asp-controller="income">Add Client</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="ClientList" asp-controller="Income">Clients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <form asp-action="CreateClient" asp-controller="Income" method="post">
                    <div class="form-group m-2">
                        <div class="mb-1 row">
                            <label asp-for="ClientID" class="col-md-2 col-form-label">Customer ID</label>
                            <div class="col-md-10"><input type="text" class="form-control" asp-for="ClientID"></div>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <div class="mb-1 row">
                            <label asp-for="ClientName" class="col-md-2 col-form-label">Client Name</label>
                            <div class="col-md-10"><input type="text" class="form-control" asp-for="ClientName"></div>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <div class="mb-1 row">
                            <label asp-for="Address" class="col-md-2 col-form-label">Address</label>
                            <div class="col-md-10">
                                <textarea type="text" rows="5" class="form-control" asp-for="Address">
                            </textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <div class="mb-1 row">
                            <label asp-for="City" class="col-md-2 col-form-label">City</label>
                            <div class="col-md-10"><input type="text" class="form-control" asp-for="City"></div>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <div class="mb-1 row">
                            <label asp-for="Country" class="col-md-2 col-form-label">Country</label>
                            <div class="col-md-10"><input type="text" class="form-control" asp-for="Country"></div>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <div class="mb-1 row">
                            <label asp-for="PhoneNumber" class="col-md-2 col-form-label">Contact Number</label>
                            <div class="col-md-10"><input type="text" class="form-control" asp-for="PhoneNumber"></div>
                        </div>
                    </div>
                    <div class="form-group m-2">
                        <button class="btn btn-primary" type="submit">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>