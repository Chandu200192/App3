@model App3.Models.BioMetricInfo
@{
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="row justify-content-center m-2">
    <div class="col-md-12">

        <div class="card border-info mb-3">
            <div class="card-header">
               <h3>Edit Employee Biometric Record</h3>
            </div>
            <div class="card-body" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size:medium">
                <form id="UserForm" method="post">
                    <div class="row g-2">
                        <div class="form-group col-md-6 visually-hidden">
                            <label asp-for="Id">Id</label>
                            <input type="number" class="form-control" asp-for="Id" readonly="readonly">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="UserName">User Name</label>
                            <input type="text" class="form-control" asp-for="UserName">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="UserID">UserID</label>
                            <input type="text" class="form-control" asp-for="UserID">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Date">Date</label>
                            <input type="date" class="form-control" asp-for="Date">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="TimeIn">TimeIn</label>
                            <input type="time" class="form-control" asp-for="TimeIn" asp-format="{0:HH:mm}">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="TimeOut">TimeOut</label>
                            <input type="time" class="form-control" asp-for="TimeOut" asp-format="{0:HH:mm}">
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="RegularHours">Regular Hours</label>
                            <input type='number' class="form-control" asp-for="RegularHours" placeholder='0.00' />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ExtraHours">Extra Hours</label>
                            <input type='number' class="form-control" asp-for="ExtraHours" placeholder='0.00' />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="RegularMin">Regular Hours</label>
                            <input type='number' class="form-control" asp-for="RegularMin" placeholder='0.00' />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ExtraMin">Extra Hours</label>
                            <input type='number' class="form-control" asp-for="ExtraMin" placeholder='0.00' />
                        </div>
                    </div>
                    <button class="btn btn-primary btn-sm mt-2" type="submit">Update</button>
                    <a class="btn btn-primary btn-sm mt-2" asp-action="Summary" asp-controller="BioMetric">Cancel</a>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
  
}
