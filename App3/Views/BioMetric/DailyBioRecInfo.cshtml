@model IEnumerable<App3.Models.DailyBioMetricRecords>

@{
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Summary" asp-controller="BioMetric">Summary</a>
                    </li>
                    @*@if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="EditBiometricRecord" asp-controller="BioMetric">Edit User BioMetric</a>
                        </li>
                    }*@
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="DailyBioRec" asp-controller="BioMetric">Detailed Information</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" asp-action="WeeklyData" asp-controller="BioMetric">Weekly data</a>
                    </li>*@
                    <li class="nav-item">
                        <a class="nav-link" asp-action="MonthlyData" asp-controller="BioMetric">Monthly Data</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <table id="biometricHistory" class="table table-bordered border-dark rounded table-responsive">
                    <thead>
                        <tr>
                            <th>UserID</th>
                            <th>Date</th>
                            <th>Time In</th>
                            <th>Time Out</th>
                            <th>Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var emp in Model)
                            {
                                <tr>
                                    <td>@emp.UserID</td>
                                    <td>@Convert.ToDateTime(@emp.Date).ToString("dd/MM/yyyy")</td>
                                    <td>@Convert.ToDateTime(@emp.TimeIn).ToString("HH:mm")</td>
                                    <td>@Convert.ToDateTime(@emp.TimeOut).ToString("HH:mm")</td>
                                    <td>@emp.Hours.ToString() hr : @emp.Minutes.ToString() min</td>                                   
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

